# Production Environment Variables
# Copy this file to .env.prod and configure for your production environment

# Database Configuration
DB_USER=autoventas_user
DB_PASSWORD=your_secure_password_here
DB_NAME=autoventas360
DB_HOST=postgres
DB_PORT=5432

# Application Configuration
PORT=3001
JWT_SECRET=your_ultra_secure_jwt_secret_here
NODE_ENV=production

# Domain Configuration
DOMAIN=autoventas360.com
ACME_EMAIL=admin@autoventas360.com

# Traefik Dashboard Authentication
# Generate with: echo $(htpasswd -nb admin your_password) | sed -e s/\\$/\\$\\$/g
TRAEFIK_AUTH=admin:$$2y$$10$$your_bcrypt_hash_here

# Optional: Database Backup Configuration
BACKUP_RETENTION_DAYS=7
BACKUP_SCHEDULE="0 2 * * *"